<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"
    isELIgnored="false"%>
    
<%
	request.setCharacterEncoding("utf-8");
%>
<jsp:useBean id="mbean" class="expression.VO">
	<jsp:setProperty name="mbean" property="*" />
</jsp:useBean>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>EL 빈 사용</title>
</head>
<body>
      <h1>관리자 회원관리</h1>
      <table class="table">
         <tr>
            <th>아이디</th>
            <th>비밀번호</th>
            <th>이름</th>
            <th>이메일</th>
            <th>주소</th>
         </tr>
         <!-- 기존 방식대로 출력 -->
         <tr>            
            <td><%=mbean.getId() %></td>
            <td><%=mbean.getPw() %></td>
            <td><%=mbean.getName() %></td>
            <td><%=mbean.getEmail() %></td>
         </tr>
         <!-- EL로 출력 -->
         <td>${mbean.id }</td>
         <td>${mbean.pw }</td>
         <td>${mbean.name }</td>
         <td>${mbean.email }</td>
      </table>

</body>
</html>
───────────────────────────────────────────────────────────────────────────────────────────────────────────────────────
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
    
<%
	// 한글처리
	request.setCharacterEncoding("utf-8");
	// 1. request => id,문자열값
	request.setAttribute("id", "songhansol");
	// 2. request => pw,문자열값
	request.setAttribute("pw", "1234");
	// 3. request => name,문자열값
	session.setAttribute("name", "송한솔");
	// 4. request => email,문자열값
	application.setAttribute("email", "skycriper@naver.com");
%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>EL 바인딩</title>
</head>
<body>
	<jsp:forward page="07_ELBindingCtrl.jsp"/>
</body>
</html>
───────────────────────────────────────────────────────────────────────────────────────────────────────────────────────
<!--
	EL을 이용 request, session, application 내장 객체에
	바인딩된 속성값을 직접 출력할 수 있다.
-->
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"
    isELIgnored="false"
    %>
<%
	request.setCharacterEncoding("utf-8");
	// 기존방식
	String id = (String) request.getAttribute("id");
	String pw = (String) request.getAttribute("pw");
	String name = (String) session.getAttribute("name");
	String email = (String) application.getAttribute("email");
%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>EL 바인딩</title>
	
</head>
<body>
<table class="table">
		<tr>
			<th>아이디</th>
			<th>비밀번호</th>
			<th>이름</th>
			<th>이메일</th>
		</tr>
		<!-- 기존방식 -->
		<tr>            
		    <td><%=id %></td>
		    <td><%=pw %></td>
		    <td><%=name %></td>
			<td><%=email %></td>
		</tr>

		<!-- EL 표현 위에 기존방식 getAttrbute 없어도 됨-->
		<tr>            
		    <td>${id }</td>
		    <td>${pw }</td>
		    <td>${name }</td>
			<td>${email }</td>
		</tr>
	</table>
</body>
</html>
───────────────────────────────────────────────────────────────────────────────────────────────────────────────────────
<!--
	MemberBean 객체를 바인딩 후 출력하기
-->
<%@page import="expression.VO"%>
<%@ page %>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
    
<%
	// 한글처리
	request.setCharacterEncoding("utf-8");
	// 자바빈 생성
	VO member = new VO("songhansol", "1234", "송한솔", "skycriper@naver.com");
	request.setAttribute("mbean", member);

%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>EL 바인딩</title>
</head>
<body>
	<jsp:forward page="08_ELBeanBindingCtrl.jsp"/>
</body>
</html>
───────────────────────────────────────────────────────────────────────────────────────────────────────────────────────
<!--
	EL을 이용 request, session, application 내장 객체에
	바인딩된 속성값을 직접 출력할 수 있다.
-->
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"
    isELIgnored="false"
    %>
<%
	request.setCharacterEncoding("utf-8");
%>

<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>EL 바인딩</title>
	<table class="table">
		<tr>
			<th>아이디</th>
			<th>비밀번호</th>
			<th>이름</th>
			<th>이메일</th>
		</tr>

		<tr>            
		    <td>${mbean.id}</td>
		    <td>${mbean.pw}</td>
		    <td>${mbean.name}</td>
		    <td>${mbean.email}</td>
	
		</tr>
		<tr>            
		    <td></td>
		    <td></td>
		    <td></td>
			<td></td>
		</tr>
	</table>
</head>
<body>

</body>
</html>
───────────────────────────────────────────────────────────────────────────────────────────────────────────────────────
<%@page import="java.util.*"%>
<%@page import="expression.VO"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
    
<%
	// 한글처리
	request.setCharacterEncoding("utf-8");

	// ArrayList 생성
	List memberList = new ArrayList();
	// 자바빈 생성
	VO mbean = new VO ("hansol","1234","송한솔","skycriper@naver.com");
	VO mbean2 = new VO ("hansol2","12342","김한솔","skycriper2@naver.com");
	
	// 2개의 객체배열을 ArrayList에 저장
	memberList.add(mbean);
	memberList.add(mbean2);
	
	// request 내장객체에 ArrayList를 바인딩
	request.setAttribute("memberList", memberList);
%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>EL ArrayList 처리</title>
<link rel="stylesheet" href="https://unpkg.com/bootstrap@3.3.7/dist/css/bootstrap.min.css">
</head>
<body>
<jsp:forward page="09_ELArrayListCtrl.jsp"></jsp:forward>

</body>
</html>
───────────────────────────────────────────────────────────────────────────────────────────────────────────────────────
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"
    isELIgnored="false"
    %>
<%
	request.setCharacterEncoding("utf-8");

%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>EL 데이터 받기</title>
<link rel="stylesheet" href="https://unpkg.com/bootstrap@3.3.7/dist/css/bootstrap.min.css">
</head>
<body>
	<table class="table">	
		<h1>관리자 회원관리</h1>
		<tr>
			<th>아이디</th>
			<th>비밀번호</th>
			<th>이름</th>
			<th>이메일</th>
		</tr>
		<tr>
			<!-- 첫번째 자바빈 -->
			<td>${memberList[1].id }</td>
			<td>${memberList[1].pw }</td>
			<td>${memberList[1].name }</td>
			<td>${memberList[1].email }</td>
		</tr>
		<tr>
			<!-- 두번째 자바빈 -->
			<td>${memberList[0].id }</td>
			<td>${memberList[0].pw }</td>
			<td>${memberList[0].name }</td>
			<td>${memberList[0].email }</td>
		</tr>
			
	</table>
───────────────────────────────────────────────────────────────────────────────────────────────────────────────────────
<!-- 
	스코프 우선 순위
		각 내장 객체의 바인딩 속성이름이 같은 경우 우선순위가 있음
		1. page => 2. request => 3. session => 4. application
		
		바인딩 데이터 세팅
		request 객체 : id = gim, pw = 1111, address = 서울시 강남구
		session : name = 김쌤
		application : email = ezen@ezen.com
		
		포워딩 페이지 = 10_ELScopeCtrl.jsp
		
		위의 데이터를 바인딩을 이용하여 테이블 형태로 출력
-->
<%
    request.setCharacterEncoding("utf-8");
	// 1. request => id,문자열값
	request.setAttribute("id", "gim");
	// 2. request => pw,문자열값
	request.setAttribute("pw", "1111");
	// 3. request => name,문자열값
	session.setAttribute("name", "김쌤");
	// 4. request => email,문자열값
	application.setAttribute("email", "ezen@ezen.com");
%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel="stylesheet" href="https://unpkg.com/bootstrap@3.3.7/dist/css/bootstrap.min.css">
</head>
<body>
	<jsp:forward page="10_ELScopeCtrl.jsp"/>
</body>
</html>
───────────────────────────────────────────────────────────────────────────────────────────────────────────────────────
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"
    isELIgnored="false"
    %>

<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel="stylesheet" href="https://unpkg.com/bootstrap@3.3.7/dist/css/bootstrap.min.css">
</head>
<body>
	<h1>관리자 우선순위</h1>
	<table class="table">
		<tr>
			<th>아이디</th>
			<th>비밀번호</th>
			<th>이름</th>
			<th>이메일</th>
		</tr>
		<!-- EL 표현 위에 기존방식 getAttrbute 없어도 됨-->
		<tr>            
		    <td>${id }</td>
		    <td>${pw }</td>
		    <td>${name }</td>
			<td>${email }</td>
		</tr>
	</table>
</body>
</html>
