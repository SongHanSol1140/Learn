<!--
	usebean
		쉽게 객체 생성, 속성에 값을 저장하거나 가져오는 방법
		=> 잡마의 new로 생성하던거 쉽게 사용 
		[태그 형식]
		jsp:useBean id="빈이름" class="패키지 이름을 포함한 자바 빈 클래스명" [scope="접근범위"]
		=> scope = 자바 빈에 접근범위 지정(page[기본값], request, session,application);
-->
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>유즈빈 폼</title>
	<style>
	   #wrap {
	      width: 960px;
	      margin: 20px auto;
	      border: 1px solid #ccc;
	      border-radius: 10px;
	      padding: 20px;
	   }
	</style>
</head>
<body>
	<div>
		<h2>회원가입</h2>
	</div>
	<div id="wrap">
		<form action="05_useBeanCtrl.jsp" method="post">
			<table class="table">
				<tr>
					<td>아이디 : </td>
					<td>
						<input type="text" name="id" value="songhansol">
					</td>
				</tr>
				<tr>
					<td>패스워드 : </td>
					<td>
						<input type="password" name="pwd" value="1234">
					</td>
				</tr>
				<tr>
					<td>이름 : </td>
					<td>
						<input type="text" name="name" value="송한솔">
					</td>
				</tr>
				<tr>
					<td>이메일 : </td>
					<td>
						<input type="email" name="email" value="skycriper@naver.com">
					</td>
				</tr>
				
				<tr>
					<td colspan="2">
						<input type="submit" value="Submit">
						<input type="reset" value="reset">
					</td>
				</tr>
			</table>
		</form>
	</div>
</body>
</html>
<!-- ─────────────────────────────────────────────────────────────────────────────────────────────────────────────────────── -->
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
    
<%
   request.setCharacterEncoding("utf-8");
%>
    <jsp:useBean id="mbean" class="vo.MemberVO" scope="page" />
   		<jsp:setProperty name="bean" property="*" />
	</jsp:useBean>
<%
   /* 폼에서 넘기는 값 받기 */
   String id = request.getParameter("id");
   String pwd = request.getParameter("pwd");
   String name = request.getParameter("name");
   String email = request.getParameter("email");
   
   // 액션태그 사용
   mbean.setId(id);
   mbean.setPwd(pwd);
   mbean.setName(name);
   mbean.setEmail(email);
   
%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>유즈빈 처리</title>
</head>
<body>
<!-- 기존방법 -->
<%=id %> <br>
<%=pwd %> <br>
<%=name %> <br>
<%=email %> <br>
 
<!-- 액션태그 사용 -->
<%= mbean.getId() %> <br>
<%= mbean.getPwd() %> <br>
<%= mbean.getName() %> <br>
<%= mbean.getEmail() %> <br>
</body>
</html>
